<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
  <ul>
    <li class="<%= 'current' if current_page?(controller: 'pages', action: 'about') %>">
      <%= link_to 'About', root_path %>
    </li>
    <li class="<%= 'current' if current_page?(controller: 'pages', action: 'gallery') %>">
      <%= link_to 'Gallery', gallery_path %>
    </li>
    <li class="<%= 'current' if current_page?(controller: 'pages', action: 'latest_news') %>">
      <%= link_to 'Latest News', latest_news_path %>
    </li>
    <li class="<%= 'current' if current_page?(controller: 'pages', action: 'contact') %>">
      <%= link_to 'Contact', contact_path %>
    </li>
    <li class="<%= 'current' if current_page?(controller: 'pages', action: 'links') %>">
      <%= link_to 'Links', links_path %>
    </li>
  </ul>
</nav>

<%= yield %>

<% if Rails.env.production? %>
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-27877862-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
<% end %>
</body>
</html>
