<h1>New Jewellery Item</h1>

<%= form_for @jewellery, url: jewellery_index_path, html: { role: "form", class: "form-horizontal" } do |f| %>
  <% unless @jewellery.errors.empty? %>
    <h2>Errors:</h2>
    <ul class="errors">
      <% @jewellery.errors.messages.each do |field, messages| %>
        <li class="error">
          <p><%= field.capitalize %>: <%= messages.join(', ') %></p>
        </li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :gallery, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :gallery, Gallery.all_names, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="button">
    <%= f.submit "Save and Publish", class: 'btn btn-primary' %>
  </div>
<% end %>
