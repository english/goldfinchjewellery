<h1>New News Item</h1>

<% unless @news.errors.empty? %>
  <h2>Errors:</h2>
  <ul class="errors">
    <% @news.errors.messages.each do |field, messages| %>
      <li class="error">
        <p><%= field.capitalize %>: <%= messages.join ', ' %></p>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @news, html: { class: "form-horizontal", role: "form" } do |f| %>
  <div class="form-group">
    <%= f.label :category, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :category, News::CATEGORIES, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save and Publish", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
