@import 'mixins';

.news-items {
  width: 620px;
  margin: 0 auto;
  list-style: none;

  h2 {
    @include hide-text;
    height: 47px;
  }

  <% %w[stockists events-and-exhibitions awards press].each do |header| %>
    .<%= header %> {
      h2 {
        background: transparent url(<%= asset_path "#{header.underscore}_header.jpg" %>) no-repeat right top;
      }
    }
  <% end %>
}

.new-news-item {
  form { margin-left: 100px; }

  label {
    width: 80px;
    display: block;
    float: left;
    text-align: right;
    margin-right: 10px;
  }

  .input { padding: 20px 0; }

  .button { margin-left: 90px; }

  textarea {
    width: 501px;
    height: 249px;
  }
}
