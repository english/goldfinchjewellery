@import 'mixins';

.galleries.index {
  nav {
    position: relative;
    height: 500px;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li { position: absolute; }

  a {
    display: block;
    height: 100%;
    @include hide-text;
  }

  <% %w( weather birds peace-doves commissions branches woodlands ).each do |gallery| %>
    .<%= gallery %> {
      background: transparent url(<%= asset_path "gallery/#{gallery}.jpg" %>) no-repeat 0 0;
    }
  <% end %>

  .peace-doves {
    left: 150px;
    top: 20px;
    width: 175px;
    height: 182px;
  }

  .weather {
    top: -100px;
    left: 450px;
    width: 175px;
    height: 123px;
  }

  .birds {
    top: -30px;
    right: 50px;
    width: 175px;
    height: 153px;
  }

  .commissions {
    bottom: 0;
    left: 0;
    width: 275px;
    height: 167px;
  }

  .branches {
    bottom: 0;
    left: 370px;
    width: 175px;
    height: 145px;
  }

  .woodlands {
    bottom: 70px;
    right: 0;
    width: 400px;
    height: 272px;
  }
}

.galleries.show {
  ul {
    width: 516px;
    margin: 0 auto;
    list-style: none;
  }

  p {
    float: left;
    width: 200px;
  }
}

.jewellery-piece {
  clear: both;
  margin-bottom: 20px;
  overflow: hidden;

  img { float: right; }
}

.admin .galleries {
  width: 620px;
  margin: 30px auto 0 auto;
  list-style: none;

  .jewelleries { padding: 0; }

  .description-delete {
    float: left;
    width: 200px;
  }
}
